#!/bin/bash

function die () {
  echo >2 "${1}"
  exit 1
}

ACCOUNT="${1}"
if [ -z "${ACCOUNT}" ] ; then
  die "No account name provided"
fi

# Exits with zero status if path is found, non-zero status if path is not found
cos json --file <%=@app[:run_as_home]%>/<%=@app[:name]%>/settings.json \
  --operation read \
  --path users.${ACCOUNT} 2>&1 > /dev/null

if [ $? -eq 0 ] ; then
  echo "true"
  exit 0
else
  echo "false"
  exit 1
fi