# Generated by cloudos on <%=Time.now.to_s%>
*filter
:INPUT ACCEPT
:FORWARD ACCEPT
:OUTPUT ACCEPT

# start fresh
-F
-X

# allow local
-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT

# allow ssh connections inbound and traffic outbound
-A INPUT -p tcp -s 0/0 --sport 513:65535 --dport 22 -m state --state NEW,ESTABLISHED -j ACCEPT
-A OUTPUT -p tcp -d 0/0 --sport 22 --dport 513:65535 -m state --state ESTABLISHED -j ACCEPT

# allow inbound related connections
-A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

# allow ping
-A INPUT -p icmp --icmp-type echo-reply -j ACCEPT
-A OUTPUT -p icmp --icmp-type echo-request -j ACCEPT